<assembly>
	<id>sgw</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
		<file>
			<source>src/main/config/log4j.xml</source>
			<destName>conf/log4j.xml</destName>
		</file>
		<file>
			<source>src/main/config/bootstrap-beans.xml</source>
			<destName>conf/bootstrap-beans.xml</destName>
		</file>
		<file>
			<source>src/main/config/sgw-beans.xml</source>
			<destName>deploy/sgw-beans.xml</destName>
		</file>
		<file>
			<source>src/main/config/linksetmanager.xml</source>
			<destName>ss7/linksetmanager.xml</destName>
		</file>
	</files>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<includes>
				<include>
					org.mobicents.protocols.ss7.sgw:gateway
				</include>
			</includes>
		</dependencySet>
	</dependencySets>
	<componentDescriptors>
		<componentDescriptor>
			src/main/assembly/common.xml
		</componentDescriptor>
	</componentDescriptors>
</assembly>
